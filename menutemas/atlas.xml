<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="menutemas.xsl"?>
<!--
Title: Lista de Atlas

Lista os atlas que podem ser vistos no i3geo. Atlas é uma interface específica para uso no i3geo.

File: i3geo/menutemas/atlas.xml
-->
<RAIZ>
<!-- Cada atlas deve ter uma entrada aqui com seus parâmetros específicos-->
	<ATLAS>
		<!-- identificador numérico e único do Atlas-->
		<ID>0</ID>
		<!-- Aqui vai o título geral do Atlas -->
		<TITULO>Título do atlas para testes</TITULO>
		<!-- Aqui vai uma descricao resumida do Atlas -->
		<DESCRICAO>Esse é um texto mais longo com a descrição do atlas</DESCRICAO>
		<!-- endereco na web do icone utilizado para destacar o atlas -->
		<ICONE></ICONE>
		<!-- Aqui vai o link HTML para mais informacoes-->
		<LINKMAISINFO>testemaisinfo.htm</LINKMAISINFO>
		<!-- Endereco na web do template HTML que sera utilizado no atlas, se for vazio será usado o default -->
		<TEMPLATEHTML>http://localhost/i3geo/atlas/geral.htm</TEMPLATEHTML>
		<!-- largura da janela do texto de apresentacao -->
		<WABERTURA>500</WABERTURA>
		<!-- altura da janela do texto de apresentacao -->
		<HABERTURA>500</HABERTURA>
		<!-- id da prancha que será aberta logo na inicialização-->
		<PRANCHADEFAULT></PRANCHADEFAULT>
		<!-- Cada prancha que compõe o Atlas tem aqui seus parâmetros definidos-->
		<PRANCHAS>
			<PRANCHA>
				<!-- id da prancha -->
				<ID>0</ID>
				<!-- Titulo da prancha do atlas-->
				<TITULO>Pranchax 1</TITULO>
				<!-- Descricao da prancha do atlas-->
				<DESCRICAO>Teste da prancha 1</DESCRICAO>
				<!--endereco na web do icone utilizado para destacar a prancha-->
				<ICONE></ICONE>
				<!--Aqui vai o link HTML para mais informacoes-->
				<LINKMAISINFO></LINKMAISINFO>
				<!-- largura da janela do texto de apresentacao-->
				<WABERTURA>200</WABERTURA>
				<!-- altura da janela do texto de apresentacao-->
				<HABERTURA>200</HABERTURA>
				<!-- Cada tema da prancha tem aqui seus parametros definidos-->
				<TEMAS>
					<TEMA>
						<!-- código do tema, ou seja, nome do arquivo mapfile ou php existente no diretório temas do i3geo-->
						<CODIGO></CODIGO>
						<!-- indica se o tema será visível no mapa já na abertura-->
						<LIGADO>sim</LIGADO>
					</TEMA>
					<TEMA>
						<CODIGO></CODIGO>
						<LIGADO>sim</LIGADO>
					</TEMA>				
				</TEMAS>
			</PRANCHA>
		</PRANCHAS>
	</ATLAS>
	<ATLAS>
		<ID>1</ID>
		<TITULO>Título do segundo atlas para testes</TITULO>
		<DESCRICAO>Esse é um texto mais longo com a descrição do atlas - teste 2</DESCRICAO>
		<ICONE></ICONE>
		<LINKMAISINFO>testemaisinfo.htm</LINKMAISINFO>
		<TEMPLATEHTML>http://localhost/i3geo/atlas/geral.htm</TEMPLATEHTML>
		<WABERTURA>400</WABERTURA>
		<HABERTURA>200</HABERTURA>
		<PRANCHADEFAULT></PRANCHADEFAULT>
		<PRANCHAS>
			<PRANCHA>
				<ID>1</ID>
				<TITULO>Uni. de Conservação</TITULO>
				<DESCRICAO></DESCRICAO>
				<ICONE></ICONE>
				<LINKMAISINFO>http://sistemas.mma.gov.br/portalcnuc/index.php?ido=principal.index&amp;idEstrutura=119</LINKMAISINFO>
				<WABERTURA>700</WABERTURA>
				<HABERTURA>300</HABERTURA>
				<TEMAS>
					<TEMA>
						<CODIGO>ucsef</CODIGO>
						<LIGADO>sim</LIGADO>
					</TEMA>				
				</TEMAS>

			</PRANCHA>
			<PRANCHA>
				<ID>2</ID>
				<TITULO>Prancha 2</TITULO>
				<DESCRICAO></DESCRICAO>
				<ICONE></ICONE>
				<LINKMAISINFO></LINKMAISINFO>
				<WABERTURA>300</WABERTURA>
				<HABERTURA>300</HABERTURA>
			</PRANCHA>
			<PRANCHA>
				<ID>3</ID>
				<TITULO>Prancha 3</TITULO>
				<DESCRICAO></DESCRICAO>
				<ICONE></ICONE>
				<LINKMAISINFO></LINKMAISINFO>
				<WABERTURA>300</WABERTURA>
				<HABERTURA>300</HABERTURA>
			</PRANCHA>
			<PRANCHA>
				<ID>4</ID>
				<TITULO>Prancha 4</TITULO>
				<DESCRICAO></DESCRICAO>
				<ICONE></ICONE>
				<LINKMAISINFO></LINKMAISINFO>
				<WABERTURA>300</WABERTURA>
				<HABERTURA>300</HABERTURA>
			</PRANCHA>
		</PRANCHAS>
	</ATLAS>
</RAIZ>